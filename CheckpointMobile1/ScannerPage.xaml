<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="CheckpointMobile1.ScannerPage"
             Title="ScannerPage">
    <ScrollView>
        <VerticalStackLayout>
            <Label x:Name="barcodeResult" Text="Result" FontSize="24" TextColor="White" HorizontalOptions="Center" Margin="0,0,0,30" />
            <cv:CameraView x:Name="cameraView" CamerasLoaded="cameraView_CamerasLoaded" BarCodeDetectionEnabled="True" 
                       WidthRequest="300" HeightRequest="200" BarcodeDetected="cameraView_BarcodeDetected"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>